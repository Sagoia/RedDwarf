<project>
  <build>
    <plugins>
      <plugin>
	<groupId>org.reddwarfserver.maven.plugin</groupId>
        <artifactId>sgs-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>install</goal>
              <goal>deploy-dependencies</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
	  <sgsHome>${basedir}/target/test-classes/unit/deploy-dependencies/sgs-server-dist-${minimum.sgs.version}</sgsHome>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.reddwarfserver.server</groupId>
      <artifactId>sgs-boot</artifactId>
      <version>${minimum.sgs.version}</version>
    </dependency>
  </dependencies>

</project>
